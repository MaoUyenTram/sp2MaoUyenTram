@model Website.Models.BigView

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Questions</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Questions.QId)

    <div class="form-group">
        @Html.LabelFor(model => model.Questions.Question, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Questions.Question, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Questions.Question, "", new { @class = "text-danger" })
        </div>
    </div>

    @{
        List<SelectListItem> listItems = new List<SelectListItem>();
        listItems.Add(new SelectListItem
        {
            Text = "areachart",
            Value = "areachart"
        });
        listItems.Add(new SelectListItem
        {
            Text = "linechart",
            Value = "linechart"

        });
        listItems.Add(new SelectListItem
        {
            Text = "piechart",
            Value = "piechart",
            Selected = true
        });
        listItems.Add(new SelectListItem
        {
            Text = "barchart",
            Value = "barchart"

        });
        listItems.Add(new SelectListItem
        {
            Text = "scatterchart",
            Value = "scatterchart"

        });
    }
    <div class="form-group">
        @Html.LabelFor(model => model.Questions.Method, "Method", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Questions.Method, listItems, "-- Select Status --")
            @Html.ValidationMessageFor(model => model.Questions.Method, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
